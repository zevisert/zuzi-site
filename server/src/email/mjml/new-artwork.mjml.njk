<mjml>
  <mj-head>
    <mj-title></mj-title>
    <mj-attributes>

    </mj-attributes>
    <mj-font name="Julius Sans One" href="https://fonts.googleapis.com/css?family=Julius+Sans+One" />
    <mj-font name="Thasadith" href="https://fonts.googleapis.com/css?family=Thasadith:700" />
  </mj-head>
  <mj-body background-color="#d6dde5">

      {% include "./header.template.mjml.njk" %}

      <mj-section background-color="#ffffff" padding-bottom="27px" padding-top="0px">
        <mj-column>
          <mj-text align="center" color="black" font-weight="bold" font-family="Julius Sans One, Helvetica, Arial, sans-serif" font-size="27px" padding-left="25px" padding-right="25px" padding-bottom="50px" padding-top="50px">
            New artwork has been posted to Zuzana's gallery!
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#ffffff" padding-bottom="27px" padding-top="0px">
        <mj-column>
          <mj-image href="{{process.env.SITE_URL}}/gallery/{{post.slug}}" src="{{process.env.SITE_URL}}/images/{{post.preview}}" />
        </mj-column>
      </mj-section>

      <!-- Message body -->
      <mj-section background-color="#ffffff" padding-bottom="20px" padding-top="20px">
        <mj-column width="15%" vertical-align="top"> </mj-column>
        <mj-column width="70%" vertical-align="top">
          <mj-text align="right" color="black" font-weight="bold" font-family="Thasadith, Helvetica, Arial, sans-serif" font-size="20px" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">
            <span> {{post.title}} </span>
          </mj-text>

          <mj-text align="right" color="#000000" font-family="Thasadith, Helvetica, Arial, sans-serif" font-size="16px" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">
            <p> {{post.description | nl2br }} </p>
          </mj-text>
        </mj-column>
        <mj-column width="15%" vertical-align="top"> </mj-column>
      </mj-section>

      <!-- Gallery call-to-action -->
      <mj-section background-color="#ffffff" border-top="1px solid black" padding-bottom="20px" padding-top="20px">

        <mj-column width="15%" vertical-align="top"> </mj-column>
        <mj-column width="70%" vertical-align="top">
          <mj-text align="center" color="black" font-weight="bold" font-family="Thasadith, Helvetica, Arial, sans-serif" font-size="20px" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">
            <span> Visit the gallery </span>
          </mj-text>

          <mj-text align="justify" color="#000000" font-family="Thasadith, Helvetica, Arial, sans-serif" font-size="16px" padding-left="25px" padding-right="25px" padding-bottom="0px" padding-top="0px">
            <p>
              View this piece and shop for many others at Zuzana's online gallery.
            </p>
          </mj-text>

          <mj-button background-color="white" color="black" font-size="13px" align="center" vertical-align="middle" border="1px solid black" border-radius="0px" padding="15px 30px" href="{{process.env.SITE_URL}}/gallery" font-family="Thasadith, Helvetica, Arial, sans-serif" padding-left="25px" padding-right="25px" padding-bottom="10px" padding-top="10px">
            VIEW MORE
          </mj-button>

        </mj-column>
        <mj-column width="15%" vertical-align="top"> </mj-column>
      </mj-section>

      <mj-divider border-width="1px" border-style="dashed" border-color="lightgrey" />

      {% include "./footer.template.mjml.njk" %}

    </mj-body>
</mjml>
