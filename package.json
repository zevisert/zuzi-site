    "gulp-nodemon": "^2.4.1",
    "gulp-rename": "^1.3.0",
    "gulp-replace": "^1.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.6",
    "pixelmatch": "^4.0.2",
    "polymer-cli": "^1.9.1",
